class Pattern3
{
public static void main(String args[])
{
for(int i=1;i<=8;i+=2)
{
for(int k=8;k>=i;k--)
{
System.out.print("  ");
}
for(int j=1;j<=i;j++)
{
System.out.print(" *  ");
}
System.out.println();
}
for(int i=5;i>=1;i-=2)
{
for(int k=8;k>=i;k--)
{
System.out.print("  ");
}
for(int j=1;j<=i;j++)
{
System.out.print("*   ");
}
System.out.println();
}
}
}
