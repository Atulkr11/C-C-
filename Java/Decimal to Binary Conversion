//Decimal-To-Binary
import java.util.*;
class DecimalToBinary
{
public static void main(String args[])
{
	int n,bin=0,r;
Scanner in=new Scanner(System.in);
System.out.print("Input a decimal number:");
	n=in.nextInt();
while(n>0)
{
	r=n%2;
	bin=bin*10+r;
	n=n/2;
}
System.out.println("Binary="+bin);
}
}
