class Pattern1
{
public static void main(String args[])
{
for(int i=1;i<=12;i+=2)
{
int m=65;
for(int j=12;j>=i;j--)
{
System.out.print("  ");
}
for(int k=1;k<=i;k++)
{
if(k<(i/2+1))
{
System.out.print((char)m+"    ");
m++;
}
else
{
System.out.print((char)m+"   ");
m--;
}
}
System.out.println();
}
}
}
