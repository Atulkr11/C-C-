import java.applet.*;
import java.awt.*;
public class LineDemo extends Applet
{
public void paint(Graphics g)
{
g.setColor(Color.red);
g.drawLine(50,200,300,200);
g.setColor(Color.green);
g.drawLine(175,75,175,300);
g.setColor(Color.blue);
g.drawLine(90,250,250,150);
}
}
/*
<Applet Code="LineDemo.class",width=600 Height=600>
</Applet>
*/
